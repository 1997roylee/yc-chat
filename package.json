{
  "name": "yc-chatroom",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.8",
  "scripts": {
    "preinstall": "node -e \"if(!/bun/.test(process.env.npm_execpath||''))throw new Error('Use bun to install dependencies: bun install')\"",
    "dev": "bun next dev",
    "build": "bun next build",
    "start": "bun next start",
    "lint": "bunx biome lint ./src",
    "format": "bunx biome format --write ./src",
    "check": "bunx biome check --write ./src",
    "db:generate": "bun drizzle-kit generate",
    "db:push": "bun drizzle-kit push",
    "db:studio": "bun drizzle-kit studio",
    "prepare": "husky"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.29",
    "@ai-sdk/react": "^3.0.92",
    "@tanstack/react-query": "^5.90.21",
    "ai": "^6.0.90",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.574.0",
    "next": "16.1.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.4.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "drizzle-kit": "^0.31.9",
    "husky": "^9.1.7",
    "shadcn": "^3.8.5",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "trustedDependencies": [
    "unrs-resolver"
  ]
}
